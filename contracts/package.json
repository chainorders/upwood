{
  "name": "contracts",
  "packageManager": "yarn@4.3.1",
  "version": "1.0.0",
  "repository": "git@github.com:chainorders/concordium-rwa.git",
  "author": "Parv Sharma <parv0888@gmail.com>",
  "private": true,
  "workspaces": [
    "compliance",
    "sponsor",
    "identity-registry",
    "security-sft-rewards",
    "security-sft-single",
    "security-p2p-trading",
    "security-mint-fund",
    "nft-multi-rewarded",
    "integration-tests",
    "utils",
    "offchain-rewards"
