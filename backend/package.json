{
	"name": "backend",
	"packageManager": "yarn@4.0.2",
	"scripts": {
		"format": "cargo +nightly fmt",
		"build": "cargo clean && cargo build --release",
		"test": "cargo test",
		"generate:spec": "yarn run generate:app-api-spec",
		"generate:client": "yarn run generate:contracts-api-client",
		"debug:listener": "cargo run --bin listener_server",
		"watch:listener": "cargo watch -x 'run --bin listener_server'",
		"generate:app-api-spec": "OUTPUT=app-api-specs.json && cargo  run --bin upwood_api_specs",
		"debug:app-api": "cargo run --bin upwood_api_server",
		"watch:app-api": "cargo watch -x 'run --bin upwood_api_server'"
	},
	"devDependencies": {
		"openapi-typescript-codegen": "^0.25.0"
	}
}
